<%= simple_form_for :search, url: places_path, method: "GET", html: { class: 'search-form' } do |f| %>
  <div class="search-box">
    <%= f.input :query, label: false, placeholder: "City, place name, type...", input_html: { class: "select2 search-select", value: "" } %>
    <%= f.input :type, as: :select, :collection => @types, label: false, prompt: "Select Type", input_html: { class: "select2 search-select" } %>
    <%= f.input :changing_table, as: :boolean, checked_value: true, unchecked_value: false %>
    <%= f.input :high_chair, as: :boolean, checked_value: true, unchecked_value: false %>
    <%= f.input :toy, as: :boolean, checked_value: true, unchecked_value: false %>
    <%= f.input :play_area, as: :boolean, checked_value: true, unchecked_value: false %>
    <button type="submit" class="search-submit"><i class="fas fa-search"></i></button>
  </div>
<% end %>
