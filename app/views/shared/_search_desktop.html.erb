<%= simple_form_for :search, url: places_path, method: "GET", html: { class: 'search-form' } do |f| %>
  <div class="search-box">
    <%= f.input :query, label: false, placeholder: "City, place name, type...", input_html: { class: "search-input" } %>
    <%= f.input :type, as: :select, :collection => @types, :label_method => :name, :value_method => :id, label: false, prompt: "Select Type" %>
    <%= f.input :changing_table, as: :boolean, checked_value: true, unchecked_value: false, label: false, input_html: { class: "filter-icon", :value => :changing_table } %>
    <%= f.input :high_chair, as: :boolean, checked_value: true, unchecked_value: false, input_html: { class: "filter-icon" } %>
    <%= f.input :toy, as: :boolean, checked_value: true, unchecked_value: false, input_html: { class: "filter-icon" } %>
    <%= f.input :play_area, as: :boolean, checked_value: true, unchecked_value: false, input_html: { class: "filter-icon" } %>
    <button type="submit" class="search-submit"><i class="fas fa-search"></i></button>
  </div>
<% end %>
