<div class="navbar-desktop">
  <div class="logo-desktop">
    <%= link_to "NAPPIES", places_path, class: "logo-text" %>
  </div>
  <div class="search-desktop">
    <%= render 'shared/search_desktop' %>
  </div>
  <div class="content-navbar">
    <% if user_signed_in? %>
      <div>
        <% if current_user.admin? %>
          <%= link_to "Create A Place", new_place_path, class: "no-decor-color" %>
        <% else %>
          <a class="no-decor-color" target="_blank" href="mailto:nappiesapp@gmail.com">Recommend A Place</a>
        <% end %>
      </div>
      <div>
        <%= link_to current_user.username.upcase, edit_user_registration_path, class: "no-decor-color content-right" %>
      </div>
    <% else %>
      <div>
        <%= link_to "Login", new_user_session_path, class: "no-decor-color" %>
      </div>
      <div>
        <strong><%= link_to "SIGN UP", new_user_registration_path, class: "no-decor-color content-right" %></strong>
      </div>
    <% end %>
  </div>
</div>


