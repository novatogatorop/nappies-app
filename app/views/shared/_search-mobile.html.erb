<button type="button" class="search-button-mobile" data-toggle="modal" data-target="#loginModal">
      <i class="fas fa-search"></i>
    </button>
    <div class="modal"id="loginModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <%= form_for :search, url: places_path, class: "search-form", method: :get do %>
              <div class="search-box-mobile">
                <%= text_field_tag :query, params[:query],
                  class: "search-input-mobile",
                  placeholder: "City, place name, type..."%>
                <%= select_tag "filter", options_for_select(['Select Filter',
                          'Diaper',
                          'Toy',
                          'High Chair',
                          'Play Area']), class: "search-select-mobile" %>
                <div class="search-popup-footer">
                  <button class="btn" type="button" data-dismiss="modal" >Close</button>
                  <button type="submit" class="search-submit-mobile">Search</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
