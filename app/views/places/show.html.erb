<div class="show-images">
  <% if @place.photo1.attached? %>
    <%= cl_image_tag @place.photo1.key, crop: :fill, class: 'show-img' %>
  <% else %>
    <%= image_tag "place-icon.png", class: 'show-img' %>
  <% end %>

  <% if @place.photo2.attached? %>
    <%= cl_image_tag @place.photo2.key, class: 'show-img' %>
  <% else %>
    <%= image_tag "place-icon.png", class: 'show-img' %>
  <% end %>

  <% if @place.photo3.attached? %>
    <%= cl_image_tag @place.photo3.key, class: 'show-img' %>
  <% else %>
    <%= image_tag "place-icon.png", class: 'show-img' %>
  <% end %>

  <% if @place.photo4.attached? %>
    <%= cl_image_tag @place.photo4.key, class: 'show-img' %>
  <% else %>
    <%= image_tag "place-icon.png", class: 'show-img' %>
  <% end %>

  <% if @place.photo5.attached? %>
    <%= cl_image_tag @place.photo5.key, class: 'show-img' %>
  <% else %>
    <%= image_tag "place-icon.png", class: 'show-img' %>
  <% end %>
</div>
<div class="show-details-box">
  <div class="show-detail-box">
    <!-- <p class="show-type"><%#= @place.user.first_name %></p> -->
    <h1 class="show-title"><%= @place.name %></h1>
    <p class="show-address"><%= @place.address %></p>
    <a class="btn-get-direction" href="https://maps.google.com/?q=<%= @place.latitude %>,<%= @place.longitude %>" target="_blank">Direction</a>
    <p><%= link_to 'Back', places_path, :class => 'no-decor-color' %></p>
    <div class="admin-authorize">
      <% if policy(@place).edit? %>
        <strong><p class="show-type"><%= link_to 'Edit', edit_place_path(@place), :class => 'no-decor-color mr-5' %></p></strong>
      <% end %>
      <% if policy(@place).destroy? %>
        <strong><p class="show-type"><%= link_to 'Destroy', place_path(@place.id), :class => 'no-decor-color', method: :delete, data: {confirm: "Are you sure?"} %></p></strong>
      <% end %>
    </div>
  </div>
  <div
    id="map", class="show-google-map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
