<div class="main-container">


  <div class="index-container">
    <div class="index-cards">

      <div class="search-box">
        <%= search_form_for @search, method: :get, class: "search-form" do |f| %>
          <%= f.label :address_cont, "Name of the place" %>
          <%= f.text_field :address_cont %>
          <%= f.label :diaper_true, "Diaper" %>
          <%= f.check_box :diaper_true %>
          <%= f.label :toy_true, "Toy" %>
          <%= f.check_box :toy_true %>
          <%= f.label :high_chair_true, "High Chair" %>
          <%= f.check_box :high_chair_true %>
          <%= f.label :play_area_true, "Play Area" %>
          <%= f.check_box :play_area_true %>
          <%= f.submit "search" %>
        <% end %>
      </div>

      <div class="sub-container">

        <h3><%= @result %></h3>

        <% @places.each do |place| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card">
              <%= link_to place_path(place), class:"link", :action => 'go' do %>
                <div class="index-images">
                  <% if place.photo1.attached? %>
                    <%= cl_image_tag place.photo1.key, class: 'card-image' %>
                  <% else %>
                    <%= image_tag "place-icon.png", class: 'card-image' %>
                  <% end %>
                </div>
                <div class="place-card-details">
                  <% if place.type_id.nil? %>
                    <p class="card-type">none</p>
                  <% else %>
                    <p class="card-type"><%= place.type.name %></p>
                  <% end %>
                  <p class="card-name"><%= place.name %></p>
                  <!-- <div> -->
                    <%# if policy(place).edit? %>
                      <!-- <p class="show-type"><%#= link_to 'Edit', edit_place_path(place), :class => 'no-decor-color' %></p> -->
                    <%# end %>
                    <%# if policy(place).destroy? %>
                      <!-- <p class="show-type"><%#= link_to 'Destroy', place, method: :delete, :class => 'no-decor-color', data: { confirm: 'Are you sure?' } %></p> -->
                    <%# end %>
                  <!-- </div> -->
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="index-map">
      <%= render 'shared/map' %>
    </div>
  </div>
</div>
