<% @places.each do |place| %>
  <%= place.name %>
  <%= place.address %>
  <strong><%= place.user.username %></strong>
  <%= link_to 'Show', place %>
  <% if policy(place).edit? %>
    <%= link_to 'Edit', edit_place_path(place) %>
  <% end %>
  <% if policy(place).destroy? %>
    <%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <br>
<% end %>


