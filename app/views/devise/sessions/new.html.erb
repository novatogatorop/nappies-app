<div class="form-container">
  <div class="form-box">
    <h1 class="sign-title">Sign in</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, placeholder: "email", label: false %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, placeholder: "password", label: false, class: 'form-inputs-box' %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Submit", :class => 'btn btn-nappies' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
